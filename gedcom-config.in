#!/bin/sh
# $Id$
# $Name$

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no
version=@VERSION@

gedcom_libs="@ICONV_LIBPATH@ -L@libdir@ @LIBICONV@ -lgedcom -lutf8tools @LIBICONV@"
gedcom_cflags="-I@includedir@"
gedcom_gom_libs="@ICONV_LIBPATH@ -L@libdir@ @LIBICONV@ -lgedcom_gom -lgedcom -lutf8tools @LIBICONV@"
gedcom_gom_cflags="-I@includedir@"

usage()
{
	cat <<EOF
Usage: gedcom-config [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
Libraries:
	gom
EOF
	exit $1
}

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;      
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo $version
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    gom)
      lib_gom=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$lib_gom" = "yes"; then
      gedcom_cflags="$gedcom_gom_cflags"
      gedcom_libs="$gedcom_gom_libs"
fi

if test "$echo_cflags" = "yes"; then
      echo $gedcom_cflags
fi

if test "$echo_libs" = "yes"; then
      echo $gedcom_libs
fi      
